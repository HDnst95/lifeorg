<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.lifeorg.frontend.controller.ToDoListController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="taskTitleField" promptText="Task Title"/>
            <Button text="Add Task" onAction="#handleAddTask"/>
            <Button text="Edit Task" onAction="#handleEditTask"/>
            <Button text="Delete Task" onAction="#handleDeleteTask"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="taskListView" onMouseClicked="#handleTaskSelection"/>
    </center>
</BorderPane>
