<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.lifeorg.frontend.controller.ToDoListController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="taskTitleField" promptText="Task Title"/>
            <Button text="Add Task" onAction="#handleAddTask" style="-fx-background-color: #00ff00;"/>
            <Button text="Edit Task" onAction="#handleEditTask" style="-fx-background-color: #ffcc00;"/>
            <Button text="Delete Task" onAction="#handleDeleteTask" style="-fx-background-color: #ff0000;"/>
            <Button text="Complete Task" onAction="#handleCompleteTask" style="-fx-background-color: #0000ff;"/>
            <Button text="Show Statistics" onAction="#handleShowStatistics" style="-fx-background-color: #00ccff;"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ListView fx:id="taskListView"/>
        </VBox>
    </center>
    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextField fx:id="pomodoroTimerField" text="25:00" editable="false" style="-fx-font-size: 18px; -fx-text-fill: black; -fx-background-color: white; -fx-border-color: gray; -fx-border-width: 1;"/>
            <Button text="Start" onAction="#handleStartPomodoro"/>
            <Button text="Pause" onAction="#handlePausePomodoro"/>
            <Button text="Reset" onAction="#handleResetPomodoro"/>
        </VBox>
    </right>
</BorderPane>
