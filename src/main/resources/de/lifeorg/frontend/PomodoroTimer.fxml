<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.lifeorg.frontend.controller.PomodoroTimerController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="timerLabel" text="25:00"/>
            <Button text="Start" onAction="#handleStart"/>
            <Button text="Pause" onAction="#handlePause"/>
            <Button text="Reset" onAction="#handleReset"/>
        </VBox>
    </center>
</BorderPane>
